<%- include("partials/header") -%>
<%- include("partials/message") -%>
<div class="container" id="regcont">
    <h1 style="text-align: center;">Fill in the details-</h1>
    <div class="row">
        <div class="col-sm-5" style="text-align: center;">
            <img src="/images/reg1.jpg" alt="" style="max-width: 100%; height: auto;">
        </div>
        <div class="col-sm-7">
    <form action="/register" method="POST" style="padding-right: 0%; padding-left: 0%;">
        <div class="form-group">
            <label for="text">Name</label>
            <input type="text" class="form-contr" name="name" placeholder="Enter name" value="<%= typeof name != 'undefined' ? name : ''%>">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-contr" name="email" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : ''%>">
        </div>
       
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-contr" name="password" placeholder="Enter password" value="<%= typeof password != 'undefined' ? password : ''%>">
        </div>
        <div class="form-group">
            <label for="password">Confirm Password</label>
            <input type="password" class="form-contr" name="password2" placeholder="Enter confirm password" value="<%= typeof password2 != 'undefined' ? password2 : ''%>">
        </div>
        <div style="text-align: center;">
        <button type="submit" class="btn btn-dark" id="regbt">Register</button>
    </div>
    </form>
    <p style="text-align: center; margin-top: 6%;">Have an Account? <a href="/login">Login</a></p>
</div>
</div>
</div>
    <%- include("partials/footer") -%>