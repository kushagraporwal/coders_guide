
    <% if(typeof errors != 'undefined') { %>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-top: 60px;">
                <%= error.msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% }); %>
        <% } %>
    
        <% if(success_msg != '') { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-top: 60px;">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %>
    
        <% if(error_msg != '') { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-top: 60px;">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %>
        <% if(error != '') { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert" style="margin-top: 60px;">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %>